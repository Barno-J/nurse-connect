

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  fullName  String
  email     String   @unique
  password  String
  nationalId String   @unique
  role      Role
  phone     String?
  address   String?
  isActive  Boolean  @default(true)
  isVerified Boolean @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  userAdmin UserAdmin?
  userNurse UserNurse?

  @@map("users")
  @@index([email], name: "idx_users_email")
}

model UserAdmin {
  id String @id @default(uuid())
  permissions Json
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  userId String @unique
  user User @relation(fields: [userId], references: [id])

  @@map("user_admins")
  @@index([userId], name: "idx_user_admins_user_id")
}

model UserNurse {
  id String @id @default(uuid())
  specialization String
  yearOfExperience Int
  sex String
  age Int
  location String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  userId String @unique
  user User @relation(fields: [userId], references: [id])

  @@map("user_nurses")
  @@index([userId], name: "idx_user_nurses_user_id")
}


enum Role {
  USER
  ADMIN
}
